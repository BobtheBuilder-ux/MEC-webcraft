{
    "name": "mecwebcraft/static",
    "description": "Static site deployment configuration",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "scripts": {
        "post-install-cmd": [
            "npm install",
            "npm run build:production"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}