{
  "site": {
    "name": "mecwebcraft",
    "domain": "mecwebcraft.com",
    "buildCommand": "npm run build:production",
    "buildOutput": "public_html",
    "framework": "vite",
    "node": "18.x",
    "type": "nodejs"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "github": {
    "branch": "main",
    "deploy": true,
    "autoDeploy": true
  },
  "hosting": {
    "engine": "nodejs",
    "public": "public_html",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}